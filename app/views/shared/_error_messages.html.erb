<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
       <%= t("shared.form_error", count_err: t("shared.error", count: @user.errors.count)) %>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
