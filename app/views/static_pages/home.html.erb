<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t(".microsoft_feed") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
  <div class="center jumbotron">
    <h1><%= t(".title_h1") %></h1>
    <h2>
      <%= t(".text_html",linkTutorial: link_to(t(".text_tutorial"),t(".link_railsTutorial"))) %>
    </h2>
    <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: t(".alt")), "http://rubyonrails.org/" %>
 <% end %>
